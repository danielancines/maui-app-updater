<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ProjectTo.Updater.MainPage" Title="Updater v1.0.1">

    <Grid RowDefinitions="Auto, Auto, Auto">
        <ProgressBar Progress="{Binding DownloadProgress}"/>
        <Label Text="{Binding DownloadingFileName}" Grid.Row="1"/>
        <Button Text="Update" Command="{Binding UpdateCommand}" Grid.Row="2"/>
    </Grid>
</ContentPage>
